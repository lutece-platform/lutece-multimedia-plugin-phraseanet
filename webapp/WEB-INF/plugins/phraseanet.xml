<?xml version="1.0" encoding="UTF-8" standalone="no"?><plug-in>
    
    <!-- Plugin Informations -->
    <name>phraseanet</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.2.1</version>
    <description>phraseanet.plugin.description</description>
    <provider>phraseanet.plugin.provider</provider>
    <provider-url>http://lutece.paris.fr</provider-url>
    <documentation/>
    <installation/>
    <changes/>
    <user-guide/>
    <icon-url>images/admin/skin/plugins/phraseanet/phraseanet.png</icon-url>
    <copyright>Copyright (c) 2001-2011 Mairie de Paris</copyright>
    <core-version-dependency>
		<min-core-version>2.3.0</min-core-version>
		<max-core-version/>	
	</core-version-dependency>
    <db-pool-required>1</db-pool-required>

    <!-- Applications -->
    <!--
    <applications>
        <application>
            <application-id>phraseanet</application-id>
            <application-class>fr.paris.lutece.plugins.phraseanet.web.PhrseanetApp</application-class>
        </application>
    </applications>
    -->

    <!-- Admin features parameters -->
    <admin-features>
        <admin-feature>
            <feature-id>PHRASEANET_MANAGEMENT</feature-id>
            <feature-title>phraseanet.adminFeature.media_handler_management.name</feature-title>
            <feature-description>phraseanet.adminFeature.media_handler_management.description</feature-description>
            <feature-level>1</feature-level>
            <feature-url>jsp/admin/plugins/phraseanet/ManageMediaHandlers.jsp</feature-url>
            <feature-icon-url/>
        </admin-feature>
    </admin-features>

    <!-- Insert Services -->
    <insert-services>
        <insert-service>
            <insert-service-id>PHRASEANET_INSERT_SERVICE</insert-service-id>
            <insert-service-name>phraseanet.insertService.name</insert-service-name>
            <insert-service-bean-class>fr.paris.lutece.plugins.phraseanet.web.PhraseanetLinkService</insert-service-bean-class>
            <insert-service-label>phraseanet.insertService.label</insert-service-label>
        </insert-service>
    </insert-services>

    
   <!-- Specific plugin CSS stylesheets -->
    <css-stylesheets>
        <css-stylesheets-scope>portal</css-stylesheets-scope>
        <css-stylesheet>phraseanet/player.css</css-stylesheet>
    </css-stylesheets>
    <javascript-files>
        <javascript-files-scope>portal</javascript-files-scope>
        <javascript-file>phraseanet/flowplayer/flowplayer-3.2.11.min.js</javascript-file>
        <javascript-file>phraseanet/flowplayer/flowplayer.playlist-3.2.10.min.js</javascript-file>
        <javascript-file>phraseanet/player.js</javascript-file>
    </javascript-files>
	    
</plug-in>